<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/course_info.css">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="css/util.css">
    <link rel="stylesheet" type="text/css" href="css/table.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

</head>

<body>
    <a href="#"><ion-icon id="back" name="arrow-back" class="back-btn"></ion-icon></a>

    <h1 style="font-family: Lato-Bold;text-align:center;color: #4272d7;margin-bottom: 20px;">Lớp
        {{course.course_ID}}</h1>

    <div class="wrapper">

        <div class="col-md-4 mb-3">
            <div class="card" style=" border-radius: 10px ;">
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <div class="mt-3">
                            <h4>Thông tin môn học</h4>
                            <p class="info">Tên môn học: {{course.course_name}} </p>
                            <p class="info">Số tín chỉ: {{course.course_credits}}</p>
                            <p class="info">Số tiết: {{course.num_of_lessons}}</p>
                            <p class="info">Số sinh viên: {{course.num_of_pupils}}</p>
                            <p class="info">Giảng viên: {{course.teacher_name}}</p>
                            <p class="info">Phòng học: {{course.room}}</p>
                            <p class="info">Thời gian: {{course.date_time}}</p>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="pc-tab">
            <input checked="checked" id="tab1" type="radio" name="pct" />
            <input id="tab2" type="radio" name="pct" />
            <input id="tab3" type="radio" name="pct" />
            <nav>
                <ul>
                    <a data-bs-toggle="getID" data-courseID="{{course.course_ID}}"></a>
                    <li id="tab1" class="tab1">
                        <a class="btn-link" data-bs-toggle="inprogress" data-id="{{course._id}}">
                            <label for="tab1">Đang học</label>
                        </a>
                    </li>
                    <li id="tab2" class="tab2">
                        <a class="btn-link" data-bs-toggle="completed" data-id="{{course._id}}">
                            <label for="tab2">Hoàn thành</label>
                        </a>
                    </li>

                </ul>
            </nav>
            <section style="width: 100%;">
                <div id="inprogress" class="tab1">

                </div>
                <div id="completed" class="tab2">

                </div>
                </a>
        </div>
        </section>
    </div>
    </div>
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true"
        style="border: none;background: rgba(254, 254, 254, 0)">
        <div class="modal-dialog" style="border: none;background: #f0f0f000;">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Xóa sinh viên</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Bạn có chắc chắn muốn xóa?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <a href="#"><button id="delete-student-btn" type="button" class="btn btn-danger">Xóa</button></a>

                </div>
            </div>
        </div>
    </div>
    {{!-- Input Mark Form --}}
    <div style=" position: absolute;z-index: 1;">
        <div id="input-mark" style="display: none;">
            <div class="change-password-container">

                <div class="col-sm-4">
                    <form name="input-mark-form" action="" method="POST">
                        <button type="button" id="closeButton" onclick="hideInputMark()">
                            <ion-icon name="close-outline"></ion-icon>
                        </button>
                        <div class="changepw-label">Nhập điểm</div>
                        <label>Điểm thành phần</label>
                        <div class="form-group pass_show">
                            <input name="mark1" type="number" class="form-control" step="0.01">
                        </div>
                        <label>Điểm giữa kỳ</label>
                        <div class="form-group pass_show">
                            <input name="mark2" type="number" class="form-control" step="0.01">
                        </div>
                        <label>Điểm cuối kỳ</label>
                        <div class="form-group pass_show">
                            <input name="mark3" type="number" class="form-control" step="0.01">
                        </div>
                        <div class="col-sm-12">
                            <a class="btn btn-info " style="position:relative;left: 40%; top:20px;"
                                onclick="markSubmit()" id="input-mark-confirm">Xác
                                nhận</a>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>


    {{!-- Add student --}}
    <div style=" position: absolute;z-index: 1;">
        <div id="add-student" style="display: none;">
            <div class="change-password-container">

                <div class="col-sm-4" style="height:250px">
                    <form name="add-student-form" action="" method="POST">
                        <button type="button" id="closeButton" onclick="hideAddStudentForm()">
                            <ion-icon name="close-outline"></ion-icon>
                        </button>
                        <div class="changepw-label">Thêm sinh viên</div>
                        <label>Mã số sinh viên:</label>
                        <div class="form-group pass_show">
                            <input name="studentid" type="text" class="form-control">
                        </div>

                        <div class="col-sm-12">
                            <a class="btn btn-info " style="position:relative;left: 40%; top:20px;"
                                onclick="addSubmit()" id="">Xác
                                nhận</a>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

    {{!-- Update mark --}}
    <div style=" position: absolute;z-index: 1;">
        <div id="modify-mark" style="display: none;">
            <div class="change-password-container">
                <form name="modify-mark-form" action="" method="POST">
                    <div class="col-sm-4">
                        <button id="closeButton" onclick="hideModifyMark()"><ion-icon
                                name="close-outline"></ion-icon></button>
                        <div class="changepw-label">Sửa điểm</div>
                        <label>Điểm thành phần</label>
                        <div class="form-group pass_show">
                            <input name="mark1" type="number" class="form-control" step="0.01">
                        </div>
                        <label>Điểm giữa kỳ</label>
                        <div class="form-group pass_show">
                            <input name="mark2" type="number" class="form-control" step="0.01">
                        </div>
                        <label>Điểm cuối kỳ</label>
                        <div class="form-group pass_show">
                            <input name="mark3" type="number" class="form-control" step="0.01">
                        </div>
                        <div class="col-sm-12">
                            <a class="btn btn-info " style="position:relative;left: 40%; top:20px;" id=""
                                onclick="updateMark()">Xác
                                nhận</a>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>

    <form name="delete-form" method="POST" action=""></form>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js"
        integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ"
        crossorigin="anonymous"></script>

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/scripts/course_info.js"></script>

    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>

</html>