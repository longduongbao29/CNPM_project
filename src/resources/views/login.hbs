<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- ===== Iconscout CSS ===== -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">

    <!-- ===== CSS ===== -->
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!--<title>Login & Registration Form</title>-->
</head>

<body>
    <div class="container">
        {{#if logoutMessage}}
        <div id="logoutMessage">
            <div class="alert alert-danger">{{logoutMessage}}</div>
        </div>
        {{/if}}
        <div class="forms">
            <div class="form login">
                <span class="title">Đăng nhập </span>

                <form action="/login" method="post">
                    <div class="input-field">
                        <input type="text" name="studentID" class="email" placeholder="Nhập mã số sinh viên" required>
                        <i class="uil uil-envelope icon"></i>
                    </div>
                    <div class="input-field">
                        <input type="password" name="password" class="password" placeholder="Nhập mật khẩu" required>
                        <i class="uil uil-lock icon"></i>
                        <i class="uil uil-eye-slash showHidePw"></i>
                    </div>
                    {{#if message}}
                    <div id="message" class="alert alert-danger">{{message}}</div>
                    {{/if}}
                    <div class="input-field button">
                        <input type="submit" value="Login">
                    </div>
                </form>
            </div>

        </div>
    </div>

    <script src="/scripts/login.js"></script>
</body>

</html>