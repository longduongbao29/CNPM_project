<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" type="text/css" href="css/util.css">
    <link rel="stylesheet" type="text/css" href="css/table.css">
    <style>
        .column1 {
            width: 15%;
        }

        .column2 {
            width: 15%
        }

        .column3 {
            width: 10%
        }

        .column4 {
            width: 10%;
            text-align: center;
        }

        .column5 {
            width: 10%;
            text-align: center;
        }

        .column6 {
            width: 10%;
            text-align: center;
        }

        .column7 {
            width: 2%
        }

        .column8 {
            width: 2%
        }
    </style>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">

</head>

<body>

    <table>
        <thead>
            <tr class="row100 head">
                <th class="cell100 column1">Mã sinh viên</th>
                <th class="cell100 column2">Họ và tên</th>
                <th class="cell100 column3">Lớp</th>
                <th class="cell100 column4">Điểm hệ 10</th>
                <th class="cell100 column5">Điểm chữ</th>
                <th class="cell100 column6">Điểm hệ 4</th>
                <th class="cell100 column7"></th>
                <th class="cell100 column8"></th>

            </tr>
        </thead>
    </table>
    </div>
    <div class="table100-body js-pscroll">
        <table>
            <tbody>
                {{#each students}}
                <tr class="row100 body">
                    <td class="cell100 column1">{{this.studentID}}</td>
                    <td class="cell100 column2">{{this.name}}</td>
                    <td class="cell100 column3">{{this.course_class}}</td>
                    <td class="cell100 column4">{{this.mark10}}</td>
                    <td class="cell100 column5">{{this.letter_ratings}}</td>
                    <td class="cell100 column6">{{this.mark4}}</td>
                    <td class="cell100 column7">
                        <a class="btn btn-link" data-bs-toggle="modify" data-id="{{this._id}}">
                            <ion-icon name="create"></ion-icon>
                        </a>

                    </td>
                    <td class="cell100 column8">
                        <a class="btn btn-link" data-bs-toggle="modal" data-id="{{this._id}}"
                            data-bs-target="#deleteModal"><ion-icon name="trash"></ion-icon></a>
                    </td>

                </tr>

                {{/each}}
            </tbody>
        </table>

        <script src="/scripts/student_completed.js"></script>
</body>

</html>