<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" type="text/css" href="css/util.css">
    <link rel="stylesheet" type="text/css" href="css/table.css">
    <style>
        .column1 {
            width: 15%;
        }

        .column2 {
            width: 20%
        }

        .column3 {
            width: 25%
        }

        .column4 {
            width: 2%
        }

        .column5 {
            width: 2%
        }

        .column6 {
            width: 2%
        }
    </style>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">

</head>

<body>

    <table>
        <thead>
            <tr class="row100 head">
                <th class="cell100 column1">Mã sinh viên</th>
                <th class="cell100 column2">Họ và tên</th>
                <th class="cell100 column3">Lớp</th>
                <th class="cell100 column4"></th>
                <th class="cell100 column5"></th>
                <th class="cell100 column6">
                    <a id="admin-add-student" onclick="showAddStudentForm()" href="#">
                        <ion-icon name="add" style="font-size: 30px;"></ion-icon>
                    </a>

                </th>
            </tr>
        </thead>
    </table>
    </div>
    <div class="table100-body js-pscroll">
        <table>
            <tbody>
                {{#each students}}
                <tr class="row100 body">
                    <td class="cell100 column1">{{this.studentID}}</td>
                    <td class="cell100 column2">{{this.name}}</td>
                    <td class="cell100 column3">{{this.course_class}}</td>
                    <td class="cell100 column4">
                        <a class="btn btn-link" data-bs-toggle="done" data-id={{this.studentID}}>
                            <ion-icon name="checkmark-circle-sharp"></ion-icon>
                        </a>

                    </td>
                    <td class="cell100 column5">
                        <a class="btn btn-link" data-bs-toggle="modal" data-id={{this.studentID}}
                            data-bs-target="#deleteModal"><ion-icon name="trash"></ion-icon></a>
                    </td>

                </tr>

                {{/each}}
            </tbody>
        </table>
        <script src="/scripts/student_in_progress.js"></script>
</body>

</html>